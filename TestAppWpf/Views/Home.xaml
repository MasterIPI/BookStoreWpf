<views:MvxWpfView x:Class="TestAppWpf.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestAppWpf.Views"
      xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <TextBox Height="20" Margin="162,10,0,0" VerticalAlignment="Top" Text="This is text from a markup" HorizontalAlignment="Left" Width="150"/>
        <TextBox Text="{Binding TestString}" Margin="162,35,0,0" RenderTransformOrigin="0.5,0.5" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>
        <Label Content="String from markup" Margin="10,10,0,0" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Width="125" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="0.5,0.5" Padding="0"/>
        <Label Content="String from app class" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="20" Width="125" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0"/>
    </Grid>
</views:MvxWpfView>
